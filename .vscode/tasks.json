	"version": "2.0.0",
	"tasks": [
		{
			"label": "format",
			"type": "shell",
			"command": "yarn prettier -w ${file}",
			"problemMatcher": []
		},
		{
			"label": "release",
			"type": "shell",
			"command": "yarn release",
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "dev",
			"runOptions": {
				"instanceLimit": 1,
				"runOn": "folderOpen"
			},
			"problemMatcher": [],
			"label": "npm: dev",
			"detail": "astro dev"
		},
		{
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "npm: build",
			"detail": "yarn format && astro build"
		}
	]
}
