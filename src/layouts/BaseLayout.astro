---
import CountryFlag from '../components/CountryFlag.astro'
import Logo from '../components/LogoText.astro'
---

<style lang="scss">
	.base-container {
		@apply ml-8 sm:mx-auto sm:max-w-xl lg:max-w-3xl;
	}
</style>

<aside class="fixed flex w-full justify-center bg-[#fcdf51]">
	<a class="font-bold text-[#0071ce] hover:text-[#0071ce]/50" href="https://u24.gov.ua/"
		><CountryFlag code="ua" alt="Ukraine flag" class="inline" /> Support Ukraine here. Thank you! <CountryFlag
			code="ua"
			alt="Ukraine flag"
			class="inline"
		/>
	</a>
</aside>

<header class="container flex h-28 items-center justify-center px-2 pt-8">
	<div class="basis-1/3"></div>
	<a href="/" class="block basis-2/3 text-center no-underline decoration-foreground hover:underline hover:decoration-8">
		<Logo />
	</a>
	<nav class="basis-1/3">
		<a
			href="/about"
			class="bg-secondary-600 px-4 py-2 text-xs text-white decoration-[3px] underline-offset-4 hover:bg-secondary-500 md:px-8 md:py-4 md:text-base"
			>About</a
		>
	</nav>
</header>

<main>
	<slot />
</main>

<footer
	class="ml-8 mt-16 flex h-14 items-center font-mono text-xs opacity-50 sm:mx-auto sm:max-w-xl sm:text-sm lg:max-w-3xl"
>
	<span
		>Roberto Tonino &mdash; 2021&ndash;2023 &mdash; <a href="/rss.xml" title="RSS Feed" class="text-foreground">RSS</a>
	</span>
</footer>
