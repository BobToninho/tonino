---
import Logo from '../components/LogoRaster.astro'
---

<style lang="scss">
	.header,
	.footer {
		margin-left: auto;
		margin-right: auto;
		max-width: 60%;
	}

	.header {
		height: 7rem;
	}

	.footer {
		align-items: center;
		display: flex;
		height: 3.5rem;
	}

	.logo {
		display: block;
		max-width: 150px;
	}
</style>

<header class="header pt-8">
	<a href="/" class="logo">
		<Logo />
	</a>
</header>

<main class="main">
	<slot />
</main>

<footer class="footer">
	by Roberto Tonino - v{__VERSION__}
</footer>
